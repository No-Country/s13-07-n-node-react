{
    "default":{
        "formatOptions":{
            "snippetInterface": "async-await"    
        },
        "paths":[
            "./src/features"
        ],
        "dryRun": false,
        "require":[
            "src/features/steps_definitions/*.js",
            "src/features/steps_definitions/*.ts",
            "src/hooks/hooks.ts"
        ],
        "requireModule":[
            "ts-node/register"
        ],
        "format":[
            "html:src/reports/cucumber-report.html",
            "json:src/reports/cucumber-report.json"
        ],
        "parallel":1
    }
}